<% layout('layouts/boilerplate')%>
<% if(email === undefined) {%> 
    <div class="container d-flex justify-content-center align-items-center mt-5">
        <div class="row-3">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4 mx-auto" style="width: 28rem;">
                <div class="card shadow">
                    <img src="https://i.imgur.com/L3BX0Xn.jpg"
                        alt="" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">Register</h5>
                        <form action="/register" method="POST" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="email">Email</label>
                                <input class="form-control" type="email" id="email" name="email" required autofocus>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="">Type</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="type" id="flexRadioDefault1"
                                        value="customer">
                                    <label class="form-check-label" for="flexRadioDefault1">
                                        Customer
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="type" id="flexRadioDefault2"
                                        value="driver">
                                    <label class="form-check-label" for="flexRadioDefault2">
                                        Driver
                                    </label>
                                </div>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="d-grid gap-2">
                                <button class="btn btn-success">Register</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <% } %> 